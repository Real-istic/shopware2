{
  "name": "ButtonColor",
  "author": "Shopware AG",
  "views": [
    "@Storefront",
    "@Plugins",
    "@ButtonColor"
  ],
  "style": [
    "app/storefront/src/scss/overrides.scss",
    "@Storefront",
    "app/storefront/src/scss/base.scss"
  ],
  "script": [
    "@Storefront",
    "app/storefront/dist/storefront/js/button-color.js"
  ],
  "asset": [
    "@Storefront",
    "app/storefront/src/assets"
  ],
  "config": {
    "sections": {
      "newVariables": {
        "label": {
          "en-GB": "new Button color",
          "de-DE": "neue Button Farbe"
        }
